<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<?import javafx.geometry.Insets?>
<VBox id="menu" fx:controller="main.java.com.rk.game.controllers.MainController"
            xmlns:fx="http://javafx.com/fxml" maxHeight="-Infinity" minHeight="-Infinity" maxWidth="-Infinity"
            minWidth="-Infinity" prefHeight="-1.0" prefWidth="-1.0" alignment="BOTTOM_CENTER" spacing="10">

    <stylesheets>
        <URL value="@../css/menu.css"/>
    </stylesheets>

    <Button text="New Game" prefWidth="300" onAction="#playGame"/>
    <Button text="Options" prefWidth="300" onAction="#options"/>
    <Button text="About" prefWidth="300" onAction="#about"/>
    <Button text="Exit" prefWidth="300" onAction="#exitGame"/>

    <padding>
        <Insets bottom="50.0"/>
    </padding>
</VBox>